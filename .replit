modules = ["python-3.11", "python3"]
[agent]
expertMode = true
integrations = ["python_gemini:1.0.0", "spotify:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "cairo", "cargo", "chromedriver", "chromium", "cmake", "espeak-ng", "ffmpeg-full", "fontconfig", "freetype", "geckodriver", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "iana-etc", "libGL", "libGLU", "libiconv", "libjpeg", "libpng", "libxcrypt", "openssl", "pkg-config", "portmidi", "qhull", "rustc", "scrot", "tcl", "tigervnc", "tk", "x11vnc", "xorg.libX11", "xorg.libXext", "xorg.xinit", "xorg.xorgserver", "xvfb-run"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GUI App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VNC Web Viewer"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "AI Assistant"

[[workflows.workflow]]
name = "GUI App"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash vnc_tools/start_gui_with_vnc.sh"

[[workflows.workflow]]
name = "VNC Web Viewer"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python vnc_tools/vnc_web_viewer.py"
waitForPort = 5000

[[workflows.workflow]]
name = "AI Assistant"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run intelligent_assistant.py --server.port 5000 --server.address 0.0.0.0 --server.headless true"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 32967
externalPort = 3000

[[ports]]
localPort = 39253
externalPort = 3002

[[ports]]
localPort = 40479
externalPort = 3001
