modules = ["python-3.11"]
[agent]
expertMode = true
integrations = ["python_gemini:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["cargo", "espeak-ng", "libiconv", "libxcrypt", "openssl", "pkg-config", "rustc", "scrot", "xvfb-run", "xorg.xorgserver", "xorg.xinit"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GUI App"

[[workflows.workflow]]
name = "GUI App"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"export DISPLAY=:99; Xvfb :99 -screen 0 1024x768x24 > /dev/null 2>&1 & sleep 2; python gui_app.py\""
