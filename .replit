modules = ["python-3.11", "python3"]
[agent]
expertMode = true
integrations = ["python_gemini:1.0.0", "spotify:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "cairo", "cargo", "chromedriver", "chromium", "espeak-ng", "ffmpeg-full", "fontconfig", "freetype", "geckodriver", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "libGL", "libGLU", "libiconv", "libjpeg", "libpng", "libxcrypt", "openssl", "pkg-config", "portmidi", "qhull", "rustc", "scrot", "tcl", "tk", "xorg.xinit", "xorg.xorgserver", "xvfb-run"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Test Gemini"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Simple Chatbot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GUI App"

[[workflows.workflow]]
name = "Test Gemini"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python test_gemini.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Simple Chatbot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python simple_chatbot.py"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "GUI App"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python gui_app.py"

[[ports]]
localPort = 40541
externalPort = 80
