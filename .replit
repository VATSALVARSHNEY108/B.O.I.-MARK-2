modules = ["python-3.11", "python3"]
[agent]
expertMode = true
integrations = ["python_gemini:1.0.0", "spotify:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["SDL2", "SDL2_image", "SDL2_mixer", "SDL2_ttf", "cairo", "cargo", "chromedriver", "chromium", "espeak-ng", "ffmpeg-full", "fontconfig", "freetype", "geckodriver", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "iana-etc", "libGL", "libGLU", "libiconv", "libjpeg", "libpng", "libxcrypt", "openssl", "pkg-config", "portmidi", "qhull", "rustc", "scrot", "tcl", "tk", "xorg.xinit", "xorg.xorgserver", "xvfb-run", "cmake", "xorg.libX11", "xorg.libXext"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GUI App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mobile Companion Server"

[[workflows.workflow]]
name = "GUI App"
author = "agent"

[workflows.workflow.metadata]
outputType = "vnc"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python gui_app.py"

[[workflows.workflow]]
name = "Mobile Companion Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python mobile_companion_server.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80
